{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2021",
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": [
      "node"
    ]
  }
}
